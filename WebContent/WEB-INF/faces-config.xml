<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<managed-bean>
		<managed-bean-name>dtbb</managed-bean-name>
		<managed-bean-class>de.medieninf.webanw.dellstore.TestBackingBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>dellstore</managed-bean-name>
		<managed-bean-class>de.medieninf.webanw.dellstore.DellStoreBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>de.medieninf.webanw.controller.Login</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>shopbean</managed-bean-name>
		<managed-bean-class>de.medieninf.webanw.controller.ShopBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>cart</managed-bean-name>
		<managed-bean-class>de.medieninf.webanw.controller.CartBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>produkte</managed-bean-name>
		<managed-bean-class>de.medieninf.webanw.controller.Produkte</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>dmbb</managed-bean-name>
		<managed-bean-class>de.medieninf.webanw.controller.DataModelBackingBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>kunden</from-outcome>
			<to-view-id>/kunden.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>produkte</from-outcome>
			<to-view-id>/produkte.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>bestellungen</from-outcome>
			<to-view-id>/orders.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/kunden.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>kunden</from-outcome>
			<to-view-id>/kunden.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>produkte</from-outcome>
			<to-view-id>/produkte.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>bestellungen</from-outcome>
			<to-view-id>/orders.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/produkte.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>kunden</from-outcome>
			<to-view-id>/kunden.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>produkte</from-outcome>
			<to-view-id>/produkte.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>bestellungen</from-outcome>
			<to-view-id>/orders.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/orders.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>kunden</from-outcome>
			<to-view-id>/kunden.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>produkte</from-outcome>
			<to-view-id>/produkte.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>bestellungen</from-outcome>
			<to-view-id>/orders.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/produkte.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{produkte.details(product.productId)}</from-action>
			<from-outcome>details</from-outcome>
			<to-view-id>/prod.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/kunden.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{kunden.details}</from-action>
			<from-outcome>details</from-outcome>
			<to-view-id>/kundenDetail.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/kundenDetail.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{kunden.makeEdit}</from-action>
			<from-outcome>false</from-outcome>
			<to-view-id>/kundenDetail.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{kunden.makeEdit}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/kundenDetail.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{kunden.backToView}</from-action>
			<from-outcome>back</from-outcome>
			<to-view-id>/kunden.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{kunden.sendEdit}</from-action>
			<from-outcome>editOK</from-outcome>
			<to-view-id>/kundenDetail.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-action>#{login.logout}</from-action>
			<from-outcome>login</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/prod.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{cart.addItem(produkte.selectedProd,cart.selQuant)}</from-action>
			<from-outcome>added</from-outcome>
			<to-view-id>/cart.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{cart.addItem(produkte.selectedProd,cart.selQuant)}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/prod.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-action>#{orders.select}</from-action>
			<from-outcome>bestellungen</from-outcome>
			<to-view-id>/orders.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{login.validateUsernamePassword}</from-action>
			<from-outcome>index</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.validateUsernamePassword}</from-action>
			<from-outcome>login</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/cart.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{cart.checkout}</from-action>
			<from-outcome>checkout</from-outcome>
			<to-view-id>/cart.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{cart.checkout}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/cart.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{cart.remove(product.product)}</from-action>
			<from-outcome>removed</from-outcome>
			<to-view-id>/cart.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
